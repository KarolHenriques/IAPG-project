#include <stdio.h>
#include <string.h>
#include <stdlib.h>
const char* getfield(char* line, int num);
int main() {
    FILE *fp;
    fp = fopen("FILEPATH", "r");
    char line[80];
    char copy[20];
    int n = 1;

    while (fgets(line, 1024, fp)){
        char* tmp = strdup(line);
        printf("Column %d would be %s\n", n, getfield(tmp, n));
        // NOTE strtok clobbers tmp
        free(tmp);

    }


        return 0;
    }
const char* getfield(char* line, int num)
{
    const char* tok;
    for (tok = strtok(line, ";"); tok && *tok; tok = strtok(NULL, ";\n"))
    {
        if (!--num)
            return tok;
    }
    return NULL;
}

//Função encontrada no Stack, utilizando o strtok para printar apenas uma coluna. "N" é o número da coluna que deseja ver - os delimitadores são ; (que é o que divide as colunas
e também há a instrução para pular de linha ao encontrar o delimitador estipulado. Assim, garantimos a leitura de toda a coluna)
