#include <stdio.h>
#include <stdlib.h>

int main() {
    char file_name[40];
    char ch;
    FILE *fp;

    printf("Please, enter the complete path of the file you wish to be read by the program\n");
    gets(file_name);

    fp = fopen (file_name, "r");

    if(fp == NULL) {
        printf("Error while opening the file.\n");
        exit(1);
    }

    printf("The contents of %s file are:\n", file_name);

    while((ch = fgetc(fp)) != EOF)
        printf("%c", ch);

    fclose(fp);

    return 0;
}
